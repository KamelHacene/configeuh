
#==============================================================================
#  Mutt Predefined variables
#==============================================================================

set editor        = vim

#==============================================================================
#  IMAP
#==============================================================================

set mbox_type     = Maildir
set folder        = ~/Mail/Gmail
set spoolfile     = +INBOX
set mbox          = "+[Gmail].All Mail"
set postponed     = "+[Gmail].Drafts"
mailboxes         = +INBOX




